entity KNOWLEDGE {
    key KNOWLEDGE_ID : Integer generated by default as identity;
        NAME         : hana.VARCHAR(200) null;
        CATEGORY     : hana.VARCHAR(200);
        DESCRIPTION  : LargeString null;
}
technical configuration {
    fulltext index KNOWLEDGE_DESCRIPTION on (DESCRIPTION)
        sync
        phrase index ratio 0.000000
        fuzzy search index off
        search only off
        fast preprocess on
        text mining off
        text analysis off;
};